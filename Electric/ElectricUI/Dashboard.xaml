<Window x:Class="ElectricUI.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectricUI"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Margin="0 0 10 0" Padding="10" Content="Home"/>
            <Button Margin="0 0 10 0" Padding="10" Content="Reports"/>
            <Button Margin="0 0 10 0" Padding="10" Content="Admn"/>
            <Button Margin="0 0 10 0" Padding="10" Content="Stations"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="0 0 10 0" Padding="10" Content="Exit"/>
        </StackPanel>
        <Frame Name="Frame" Grid.Row="1" Grid.ColumnSpan="2" Background="BlueViolet" Margin="0 0 0 0" Height="Auto" Width="Auto" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
