<Page x:Class="ElectricUI.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectricUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">


    <Border Background="Blue">
        <Grid>
            <TextBlock Text="Admin Page." FontSize="45" Foreground="White" FontWeight="Bold" Margin="0 10 0 40" HorizontalAlignment="Center" />
            <StackPanel VerticalAlignment="Top" Grid.Column="0" Margin="0 0 0 0">
                <Image Source="images/my_electric_car.png" Width="180"/>
            </StackPanel>
            <StackPanel VerticalAlignment="center" Grid.Column="0" Margin="0 0 0 0">
                <DataGrid Name="DataGridUsers" AutoGenerateColumns="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
